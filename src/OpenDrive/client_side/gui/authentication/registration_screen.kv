#:kivy 1.10.1

#:include authentication/widgets.kv


<ScreenRegistration>:
    name: 'screen_registration'

    tf_username: tf_username
    tf_email: tf_email
    tf_password: tf_password
    tf_repeated_password: tf_repeated_password
    lbl_user_hints: lbl_user_hints

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: assets_manager.get_image_path('login_background_blurred.jpg')

    AuthenticationContainer:
        HeaderContainer:
            LabelHeader:
                text: "Register"

        InputContainer:
            InputUsername:
                id: tf_username

            InputEmail:
                id: tf_email

            InputPassword:
                id: tf_password

            InputPassword:
                id: tf_repeated_password
                hint_text: "Repeat password"

        ButtonsContainer:
            ButtonLogin:
                on_release: root.btn_release_login()
            ButtonRegister:
                on_release: root.btn_release_register()

        UserHints:
            id: lbl_user_hints

    BoxLayout:
