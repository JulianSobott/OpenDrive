#:kivy 1.0.9

<ScreenLoginManual>:
    name: 'screen_login_manual'
    tf_username: tf_username
    tf_password: tf_password
    lbl_user_hints: lbl_user_hints

    BoxLayout:
        orientation: "vertical"


        Label:
            text: "Username"

        TextInput:
            id: tf_username

        Label:
            text: "Password"

        TextInput:
            id: tf_password

        Button:
            text: "Login"
            on_release: root.btn_release_login()

        Button:
            text: "Register"

        Label:
            id: lbl_user_hints
            color: 1, 0, 0, 1